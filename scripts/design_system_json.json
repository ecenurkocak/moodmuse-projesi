{
  "theme": {
    "name": "Modern Light Dashboard",
    "version": "1.0.0",
    "type": "light"
  },
  "colors": {
    "primary": {
      "50": "#fdf2f8",
      "100": "#fce7f3",
      "200": "#fbcfe8",
      "300": "#f9a8d4",
      "400": "#f472b6",
      "500": "#ec4899",
      "600": "#db2777",
      "700": "#be185d",
      "800": "#9d174d",
      "900": "#831843"
    },
    "secondary": {
      "50": "#f5f3ff",
      "100": "#ede9fe",
      "200": "#ddd6fe",
      "300": "#c4b5fd",
      "400": "#a78bfa",
      "500": "#8b5cf6",
      "600": "#7c3aed",
      "700": "#6d28d9",
      "800": "#5b21b6",
      "900": "#4c1d95"
    },
    "neutral": {
      "50": "#fafafa",
      "100": "#f5f5f5",
      "200": "#e5e5e5",
      "300": "#d4d4d4",
      "400": "#a3a3a3",
      "500": "#737373",
      "600": "#525252",
      "700": "#404040",
      "800": "#262626",
      "900": "#171717"
    },
    "background": {
      "default": "#ffffff",
      "paper": "#fafafa",
      "elevated": "#f8fafc"
    },
    "text": {
      "primary": "#1f2937",
      "secondary": "#6b7280",
      "disabled": "#9ca3af"
    },
    "border": {
      "light": "#e5e7eb",
      "default": "#d1d5db",
      "strong": "#9ca3af"
    },
    "gradients": {
      "primary": "linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%)",
      "secondary": "linear-gradient(135deg, #f472b6 0%, #a78bfa 100%)",
      "accent": "linear-gradient(135deg, #fce7f3 0%, #ede9fe 100%)",
      "card": "linear-gradient(135deg, #ffffff 0%, #f8fafc 100%)"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["Inter", "system-ui", "-apple-system", "sans-serif"],
      "mono": ["SF Mono", "Monaco", "Inconsolata", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },
  "components": {
    "layout": {
      "container": {
        "maxWidth": "1200px",
        "padding": "1rem",
        "margin": "0 auto"
      },
      "sidebar": {
        "width": "280px",
        "background": "colors.background.paper",
        "borderRight": "1px solid colors.border.light",
        "padding": "spacing.lg"
      },
      "header": {
        "height": "64px",
        "background": "colors.background.default",
        "borderBottom": "1px solid colors.border.light",
        "padding": "0 spacing.xl"
      },
      "main": {
        "padding": "spacing.xl",
        "background": "colors.background.default",
        "minHeight": "calc(100vh - 64px)"
      }
    },
    "card": {
      "base": {
        "background": "colors.background.paper",
        "borderRadius": "borderRadius.lg",
        "boxShadow": "shadows.sm",
        "padding": "spacing.lg",
        "border": "1px solid colors.border.light"
      },
      "elevated": {
        "background": "colors.gradients.card",
        "borderRadius": "borderRadius.xl",
        "boxShadow": "shadows.md",
        "padding": "spacing.xl",
        "border": "none"
      },
      "gradient": {
        "background": "colors.gradients.primary",
        "borderRadius": "borderRadius.xl",
        "boxShadow": "shadows.lg",
        "padding": "spacing.xl",
        "border": "none",
        "color": "white"
      }
    },
    "button": {
      "primary": {
        "background": "colors.gradients.primary",
        "color": "white",
        "borderRadius": "borderRadius.md",
        "padding": "spacing.sm spacing.lg",
        "fontSize": "typography.fontSize.sm",
        "fontWeight": "typography.fontWeight.medium",
        "border": "none",
        "boxShadow": "shadows.sm",
        "transition": "all 0.2s ease"
      },
      "secondary": {
        "background": "colors.background.paper",
        "color": "colors.text.primary",
        "borderRadius": "borderRadius.md",
        "padding": "spacing.sm spacing.lg",
        "fontSize": "typography.fontSize.sm",
        "fontWeight": "typography.fontWeight.medium",
        "border": "1px solid colors.border.default",
        "boxShadow": "shadows.sm",
        "transition": "all 0.2s ease"
      },
      "ghost": {
        "background": "transparent",
        "color": "colors.text.secondary",
        "borderRadius": "borderRadius.md",
        "padding": "spacing.sm spacing.lg",
        "fontSize": "typography.fontSize.sm",
        "fontWeight": "typography.fontWeight.medium",
        "border": "none",
        "transition": "all 0.2s ease"
      }
    },
    "input": {
      "base": {
        "background": "colors.background.paper",
        "borderRadius": "borderRadius.md",
        "padding": "spacing.sm spacing.md",
        "fontSize": "typography.fontSize.sm",
        "border": "1px solid colors.border.default",
        "color": "colors.text.primary",
        "transition": "border-color 0.2s ease"
      },
      "search": {
        "background": "colors.background.paper",
        "borderRadius": "borderRadius.full",
        "padding": "spacing.sm spacing.lg",
        "fontSize": "typography.fontSize.sm",
        "border": "1px solid colors.border.light",
        "color": "colors.text.primary",
        "transition": "all 0.2s ease"
      }
    },
    "avatar": {
      "small": {
        "width": "32px",
        "height": "32px",
        "borderRadius": "borderRadius.full",
        "background": "colors.gradients.secondary"
      },
      "medium": {
        "width": "48px",
        "height": "48px",
        "borderRadius": "borderRadius.full",
        "background": "colors.gradients.secondary"
      },
      "large": {
        "width": "64px",
        "height": "64px",
        "borderRadius": "borderRadius.full",
        "background": "colors.gradients.secondary"
      }
    },
    "badge": {
      "primary": {
        "background": "colors.gradients.primary",
        "color": "white",
        "borderRadius": "borderRadius.full",
        "padding": "spacing.xs spacing.sm",
        "fontSize": "typography.fontSize.xs",
        "fontWeight": "typography.fontWeight.medium"
      },
      "secondary": {
        "background": "colors.gradients.accent",
        "color": "colors.primary.700",
        "borderRadius": "borderRadius.full",
        "padding": "spacing.xs spacing.sm",
        "fontSize": "typography.fontSize.xs",
        "fontWeight": "typography.fontWeight.medium"
      }
    },
    "navigation": {
      "item": {
        "base": {
          "borderRadius": "borderRadius.md",
          "padding": "spacing.sm spacing.md",
          "fontSize": "typography.fontSize.sm",
          "fontWeight": "typography.fontWeight.medium",
          "color": "colors.text.secondary",
          "transition": "all 0.2s ease",
          "display": "flex",
          "alignItems": "center",
          "gap": "spacing.sm"
        },
        "active": {
          "background": "colors.gradients.accent",
          "color": "colors.primary.700",
          "borderRadius": "borderRadius.md",
          "padding": "spacing.sm spacing.md",
          "fontSize": "typography.fontSize.sm",
          "fontWeight": "typography.fontWeight.semibold"
        },
        "hover": {
          "background": "colors.neutral.50",
          "color": "colors.text.primary"
        }
      }
    },
    "dropdown": {
      "base": {
        "background": "colors.background.paper",
        "borderRadius": "borderRadius.lg",
        "boxShadow": "shadows.lg",
        "border": "1px solid colors.border.light",
        "padding": "spacing.sm",
        "minWidth": "200px"
      },
      "item": {
        "base": {
          "borderRadius": "borderRadius.sm",
          "padding": "spacing.sm spacing.md",
          "fontSize": "typography.fontSize.sm",
          "color": "colors.text.primary",
          "transition": "all 0.2s ease",
          "display": "flex",
          "alignItems": "center",
          "gap": "spacing.sm"
        },
        "hover": {
          "background": "colors.neutral.50",
          "color": "colors.text.primary"
        }
      }
    },
    "toast": {
      "success": {
        "background": "colors.background.paper",
        "borderRadius": "borderRadius.lg",
        "boxShadow": "shadows.lg",
        "border": "1px solid colors.border.light",
        "padding": "spacing.lg",
        "color": "colors.text.primary"
      },
      "error": {
        "background": "colors.background.paper",
        "borderRadius": "borderRadius.lg",
        "boxShadow": "shadows.lg",
        "border": "1px solid #fca5a5",
        "padding": "spacing.lg",
        "color": "colors.text.primary"
      }
    }
  },
  "icons": {
    "size": {
      "xs": "16px",
      "sm": "20px",
      "md": "24px",
      "lg": "32px",
      "xl": "48px"
    },
    "library": "lucide-react",
    "common": {
      "home": "Home",
      "search": "Search",
      "settings": "Settings",
      "user": "User",
      "menu": "Menu",
      "close": "X",
      "chevronDown": "ChevronDown",
      "chevronRight": "ChevronRight",
      "plus": "Plus",
      "edit": "Edit",
      "delete": "Trash2",
      "save": "Check",
      "cancel": "X",
      "refresh": "RotateCcw",
      "bell": "Bell",
      "mail": "Mail",
      "calendar": "Calendar",
      "folder": "Folder",
      "file": "File",
      "image": "Image",
      "video": "Video",
      "download": "Download",
      "upload": "Upload",
      "share": "Share",
      "heart": "Heart",
      "star": "Star",
      "bookmark": "Bookmark",
      "flag": "Flag",
      "tag": "Tag",
      "filter": "Filter",
      "sort": "ArrowUpDown",
      "grid": "Grid",
      "list": "List",
      "card": "Square",
      "table": "Table",
      "chart": "BarChart3",
      "pie": "PieChart",
      "line": "LineChart",
      "area": "AreaChart",
      "scatter": "ScatterChart"
    }
  },
  "animation": {
    "duration": {
      "fast": "0.15s",
      "normal": "0.2s",
      "slow": "0.3s"
    },
    "easing": {
      "ease": "ease",
      "easeIn": "ease-in",
      "easeOut": "ease-out",
      "easeInOut": "ease-in-out"
    },
    "effects": {
      "fadeIn": {
        "opacity": "0 to 1",
        "duration": "animation.duration.normal",
        "easing": "animation.easing.easeOut"
      },
      "slideIn": {
        "transform": "translateY(10px) to translateY(0)",
        "opacity": "0 to 1",
        "duration": "animation.duration.normal",
        "easing": "animation.easing.easeOut"
      },
      "scaleIn": {
        "transform": "scale(0.95) to scale(1)",
        "opacity": "0 to 1",
        "duration": "animation.duration.fast",
        "easing": "animation.easing.easeOut"
      }
    }
  },
  "breakpoints": {
    "mobile": "320px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1200px"
  },
  "responsive": {
    "mobile": {
      "sidebar": {
        "width": "100%",
        "position": "fixed",
        "height": "100vh",
        "zIndex": "50"
      },
      "container": {
        "padding": "spacing.md"
      },
      "header": {
        "padding": "0 spacing.md"
      },
      "main": {
        "padding": "spacing.md"
      }
    },
    "tablet": {
      "sidebar": {
        "width": "240px"
      },
      "container": {
        "padding": "spacing.lg"
      },
      "main": {
        "padding": "spacing.lg"
      }
    },
    "desktop": {
      "sidebar": {
        "width": "280px"
      },
      "container": {
        "padding": "spacing.xl"
      },
      "main": {
        "padding": "spacing.xl"
      }
    }
  },
  "states": {
    "hover": {
      "opacity": "0.8",
      "transform": "translateY(-2px)",
      "transition": "all 0.2s ease"
    },
    "active": {
      "opacity": "0.9",
      "transform": "translateY(0)"
    },
    "focus": {
      "outline": "2px solid colors.primary.500",
      "outlineOffset": "2px"
    },
    "disabled": {
      "opacity": "0.5",
      "cursor": "not-allowed"
    }
  },
  "zIndex": {
    "dropdown": "10",
    "sticky": "20",
    "modal": "30",
    "popover": "40",
    "tooltip": "50"
  }
}